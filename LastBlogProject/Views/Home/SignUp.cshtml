@model LastBlogProject.Models.Authors

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Giriş Yap</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/blog-home.css" rel="stylesheet" />
    <style type="text/css">
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

            .form-signin .form-control {
                position: relative;
                box-sizing: border-box;
                height: auto;
                padding: 10px;
                font-size: 16px;
                margin-bottom: 10px;
            }

                .form-signin .form-control:focus {
                    z-index: 2;
                }

            .form-signin input[type="email"] {
                margin-bottom: -1px;
            }

            .form-signin input[type="password"] {
            }
    </style>
</head>
<body class="text-center">
    @using (Html.BeginForm("SignUp", "Home", FormMethod.Post, new { @class = "form-signin" }))
    {
        <a href="/Home/Index"><img class="mb-4" src="~/Content/images/icon-logo.svg" alt="" width="72" height="72"></a>
        <h1 class="h3 mb-3 font-weight-normal">Kayıt Olun</h1>
        @Html.LabelFor(x => x.Name, new { @class = "sr-only" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Ad", @required = "", @autofocus = "" })

        @Html.LabelFor(x => x.Surname, new { @class = "sr-only" })
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @placeholder = "Soyad", @required = "", @autofocus = "" })

        @Html.LabelFor(x => x.UserName, new { @class = "sr-only" })
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı adı", @required = "", @autofocus = "" })

        @Html.LabelFor(x => x.Password, new { @class = "sr-only" })
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Şifre", @required = "", @autofocus = "" })

        @Html.LabelFor(x => x.Email, new { @class = "sr-only" })
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email", @required = "", @autofocus = "" })

        <button class="btn btn-lg btn-success btn-block">Kayıt Ol</button>
        <p class="mt-5 mb-3 text-muted">Bilge Adam Project</p>
        <p>Hesabın var mı ? <a href="/Home/Login"> Giriş Yap</a></p>

    }
</body>
</html>
